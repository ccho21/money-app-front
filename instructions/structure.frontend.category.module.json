{
  "module": "category",
  "entryPoints": [
    "app/category/page.tsx",
    "app/category/new/page.tsx",
    "app/category/[id]/edit/page.tsx"
  ],
  "routes": ["/category", "/category/new", "/category/[id]/edit"],
  "stores": ["modules/category/store.ts", "modules/category/formStore.ts"],
  "features": [
    "modules/category/api.ts",
    "modules/category/hooks.ts",
    "modules/category/types.ts"
  ],
  "api": {
    "getCategoriesAPI": {
      "function": "getCategoriesAPI",
      "method": "GET",
      "url": "/categories",
      "responseDTO": "CategoryDetailDTO[]",
      "description": "전체 카테고리 목록 조회",
      "usedBy": ["hooks.ts → fetchCategories"],
      "storeStrategy": {
        "store": "useCategoryStore.ts",
        "stateShape": {
          "categories": "CategoryDetailDTO[]"
        }
      }
    },
    "createCategoryAPI": {
      "function": "createCategoryAPI",
      "method": "POST",
      "url": "/categories",
      "requestDTO": "CategoryCreateRequestDTO",
      "responseDTO": "void",
      "description": "새 카테고리 생성",
      "usedBy": ["hooks.ts → createCategory"],
      "validation": {
        "frontend": ["name, icon, type 필수", "color 선택"],
        "backend": ["@IsString name", "@IsEnum type", "@IsOptional color"]
      },
      "storeStrategy": {
        "store": "useCategoryFormStore.ts",
        "afterSuccess": "reset + refetch"
      }
    },
    "updateCategoryAPI": {
      "function": "updateCategoryAPI",
      "method": "PATCH",
      "url": "/categories/:id",
      "requestDTO": "CategoryUpdateRequestDTO",
      "responseDTO": "void",
      "description": "기존 카테고리 수정",
      "usedBy": ["hooks.ts → updateCategory"],
      "validation": {
        "frontend": ["Partial 수정 가능"],
        "backend": ["PartialType(CategoryCreateRequestDTO) 기반"]
      },
      "storeStrategy": {
        "store": "useCategoryFormStore.ts",
        "afterSuccess": "refetch"
      }
    },
    "deleteCategoryAPI": {
      "function": "deleteCategoryAPI",
      "method": "DELETE",
      "url": "/categories/:id",
      "description": "카테고리 삭제",
      "usedBy": ["hooks.ts → deleteCategory"],
      "storeStrategy": {
        "store": "useCategoryStore.ts",
        "afterSuccess": "refetch"
      }
    }
  },
  "mainDTOs": [
    {
      "name": "CategoryDetailDTO",
      "file": "types.ts",
      "extends": null,
      "fields": [
        {
          "name": "id",
          "type": "string",
          "optional": false
        },
        {
          "name": "name",
          "type": "string",
          "optional": false
        },
        {
          "name": "type",
          "type": "CategoryType",
          "optional": false
        },
        {
          "name": "icon",
          "type": "string",
          "optional": true
        },
        {
          "name": "color",
          "type": "string",
          "optional": true
        }
      ]
    },
    {
      "name": "CategoryCreateRequestDTO",
      "file": "types.ts",
      "extends": "BaseCategoryDTO",
      "fromModule": "categories",
      "fields": [
        {
          "name": "name",
          "type": "string",
          "optional": false
        },
        {
          "name": "icon",
          "type": "string",
          "optional": false
        },
        {
          "name": "color",
          "type": "string",
          "optional": true
        },
        {
          "name": "type",
          "type": "CategoryType",
          "optional": false
        }
      ]
    },
    {
      "name": "CategoryUpdateRequestDTO",
      "file": "types.ts",
      "extends": "PartialType",
      "composedFrom": ["CategoryCreateRequestDTO"],
      "fields": [
        {
          "name": "name",
          "type": "string",
          "optional": true
        },
        {
          "name": "icon",
          "type": "string",
          "optional": true
        },
        {
          "name": "color",
          "type": "string",
          "optional": true
        },
        {
          "name": "type",
          "type": "CategoryType",
          "optional": true
        }
      ]
    },
    {
      "name": "BaseCategoryDTO",
      "file": "types.ts",
      "extends": null,
      "fields": [
        {
          "name": "name",
          "type": "string",
          "optional": false
        },
        {
          "name": "icon",
          "type": "string",
          "optional": false
        },
        {
          "name": "color",
          "type": "string",
          "optional": true
        },
        {
          "name": "type",
          "type": "CategoryType",
          "optional": false
        }
      ]
    }
  ]
}
